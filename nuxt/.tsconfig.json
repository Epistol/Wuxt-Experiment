{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "globals": {
    "it": false,
    "expect": false
  },
  "allowSyntheticDefaultImports": true

}
